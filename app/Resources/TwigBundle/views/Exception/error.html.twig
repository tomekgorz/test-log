{# app/Resources/TwigBundle/views/Exception/error.html.twig #}

{% extends "TgorzTrainingBundle::base.html.twig" %}

{% block pageTitle %}
    Wystąpił błąd | {{ parent() }}
{% endblock %}

{% block pageContainer %}
