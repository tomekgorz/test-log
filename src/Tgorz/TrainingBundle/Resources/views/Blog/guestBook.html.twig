            {% for entry in comments %}
                <secton>
                    <h4>{{ entry['name']|raw }}</h4>
                    <p>{{ entry['comment'] }}</p>
                </section>
            {% endfor %}
        </div>
{#        {% endautoescape %}#}
    </article>

{% endblock %}